# HTTPS and Security Configuration
# This file is used by the serve command to add security headers

# Force HTTPS
FORCE_HTTPS=true
HTTPS_REDIRECT=true

# Security headers
SECURITY_HEADERS=true

# Content Security Policy - Allow HTTPS only
CSP_DEFAULT_SRC="'self' https:"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval' https:"
CSP_STYLE_SRC="'self' 'unsafe-inline' https:"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' https:"
CSP_CONNECT_SRC="'self' https:"

# HSTS (HTTP Strict Transport Security)
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
