{
  "description": "Crie estas credenciais no n8n com os mesmos nomes. Substitua placeholders pelos seus segredos.",
  "credentials": [
    {
      "type": "httpHeaderAuth",
      "name": "Supabase Service (Cabeçalhos)",
      "fields": {
        "headers": {
          "apikey": "{{ SUPABASE_SERVICE_ROLE_KEY }}",
          "Authorization": "Bearer {{ SUPABASE_SERVICE_ROLE_KEY }}",
          "Content-Profile": "public",
          "Accept-Profile": "public"
        },
        "baseUrl": "{{ SUPABASE_URL }}"
      }
    },
    {
      "type": "httpHeaderAuth",
      "name": "Função Edge Resend",
      "fields": {
        "headers": {
          "Content-Type": "application/json"
        },
        "baseUrl": "{{ SUPABASE_URL }}/functions/v1"
      }
    },
    {
      "type": "httpHeaderAuth",
      "name": "Stripe (Chave Secreta)",
      "fields": {
        "headers": {
          "Authorization": "Bearer {{ STRIPE_API_KEY }}",
          "Content-Type": "application/json"
        },
        "baseUrl": "https://api.stripe.com"
      }
    }
  ]
}
