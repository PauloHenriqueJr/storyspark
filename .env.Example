# Configurações da Aplicação StorySpark
# Copie este arquivo para .env e configure suas variáveis

# === AMBIENTE ===
NODE_ENV=production
REACT_APP_ENVIRONMENT=production

# === SUPABASE ===
VITE_SUPABASE_PROJECT_ID=
VITE_SUPABASE_PUBLISHABLE_KEY=
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# === MAILTRAP ===
VITE_MAILTRAP_API_TOKEN=
VITE_DEFAULT_FROM_EMAIL=notifications@storyspark.com
VITE_MAILTRAP_ACCOUNT_ID=2428199

# === API ===
REACT_APP_API_URL=https://api.storyspark.com.br
REACT_APP_API_VERSION=v1

# === AUTENTICAÇÃO ===
REACT_APP_JWT_SECRET=your-jwt-secret-here
REACT_APP_AUTH_REDIRECT_URL=https://app.storyspark.com.br/auth/callback

# === OPENAI/IA ===
REACT_APP_OPENAI_API_KEY=sk-your-openai-key-here
REACT_APP_AI_MODEL=gpt-4
REACT_APP_MAX_TOKENS=2000

# === INTEGRAÇÃO REDES SOCIAIS ===
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id
REACT_APP_INSTAGRAM_APP_ID=your-instagram-app-id
REACT_APP_LINKEDIN_CLIENT_ID=your-linkedin-client-id
REACT_APP_TWITTER_API_KEY=your-twitter-api-key

# === ANALYTICS ===
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_HOTJAR_ID=your-hotjar-id
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# === PAGAMENTOS ===
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
REACT_APP_STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# === DOMÍNIOS ===
REACT_APP_APP_DOMAIN=app.storyspark.com.br
REACT_APP_API_DOMAIN=api.storyspark.com.br
REACT_APP_ADMIN_DOMAIN=admin.storyspark.com.br
REACT_APP_LANDING_DOMAIN=www.storyspark.com.br

# === FEATURES FLAGS ===
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# === DESENVOLVIMENTO ===
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
REACT_APP_DEV_TOOLS=false